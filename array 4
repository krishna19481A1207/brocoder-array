https://practice.geeksforgeeks.org/problems/wave-array-1587115621/1


class Solution {
    public static void convertToWave(int n, int[] a) {
        int temp ;
        
        for(int i=0;i<=n-2;i+=2) 
        {
            temp= a[i];
            a[i]=a[i+1];
            a[i+1]= temp;
            
        }
        
    }
}
        
